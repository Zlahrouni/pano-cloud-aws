server {
    listen       80;
    listen  [::]:80;
    server_name  localhost;

    #access_log  /var/log/nginx/host.access.log  main;

    location / {
        root   /var/www/html;
        index  index.html index.htm;
    }
    server {
    listen 80;  # Listen on port 80 of the container (mapped to a host port later)
    server_name localhost;

    location / {
        proxy_pass http://my-node-app:PORT;  # Forward requests to your Node.js container on port defined by the PORT environment variable
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}

    #error_page  404              /404.html;

    # redirect server error pages to the static page /50x.html
    #
    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /var/www/html;
    }

